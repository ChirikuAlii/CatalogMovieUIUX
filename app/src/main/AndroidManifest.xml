<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.chirikualii.catalogmovieuiux">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="id.chirikualii.catalogmovieuiux.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="id.chirikualii.catalogmovieuiux_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentasion.ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentasion.ui.detailmovie.DetailMovieActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".presentasion.ui.searchmovie.SearchMovieActivity"
            android:screenOrientation="sensor" />
        <activity
            android:name=".presentasion.ui.favoritemovie.FavoriteMovieActivity"
            android:screenOrientation="sensor" />

        <provider
            android:name=".data.provider.FavoriteMovieProvider"
            android:authorities="id.chirikualii.catalogmovieuiux"
            android:exported="true"
            android:readPermission="id.chirikualii.catalogmovieuiux.READ_DATABASE"
            android:writePermission="id.chirikualii.catalogmovieuiux.WRITE_DATABASE" />

        <receiver android:name=".widgets.FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_favorite_movie_info" />
        </receiver>

        <service
            android:name=".widgets.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name=".presentasion.ui.settings.SettingsActivity"></activity>

        <receiver android:name=".service.AlarmReceiver"
            android:enabled="true"
            android:exported="true"/>

        <service
            android:name=".service.SchedulerService"
            android:enabled="true"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
    </application>

</manifest>